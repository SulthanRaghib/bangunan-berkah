generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "linux-musl"]
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model Review {
    id          String   @id @default(auto()) @map("_id") @db.ObjectId
    projectCode String   @unique
    userId      String
    userName    String
    rating      Int
    comment     String?
    photos      String[]
    createdAt   DateTime @default(now())

    @@map("reviews")
}
