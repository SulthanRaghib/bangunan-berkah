{
  "name": "project-service",
  "version": "1.0.0",
  "description": "Project Management Service for PT Solusi Bangunan Berkah",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node seeders/seed.js",
    "start:prod": "npx prisma db push --accept-data-loss && node server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:seed": "node prisma/seed.js",
    "prisma:reset": "npx prisma migrate reset --force && npm run prisma:seed",
    "docker:build": "docker build -t project-service ."
  },
  "dependencies": {
    "@prisma/client": "^5.19.0",
    "axios": "^1.7.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "prisma": "^5.19.0"
  }
}
