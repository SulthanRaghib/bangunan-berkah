{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "Authentication User Service for PT Solusi Bangunan Berkah",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:prod": "npx prisma db push --accept-data-loss && node server.js",
    "dev": "nodemon server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:seed": "node prisma/seed.js",
    "prisma:reset": "npx prisma migrate reset --force && npm run prisma:seed",
    "docker:build": "docker build -t auth-service ."
  },
  "dependencies": {
    "@prisma/client": "^5.15.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.4",
    "prisma": "^5.19.0"
  }
}
